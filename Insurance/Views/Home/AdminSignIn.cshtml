   
   
 

<!DOCTYPE html>
 

@{

    string[] items = { "Customer Search", "Policy Search", "Policy Add" , "Reset Password" };
    var selectList = new SelectList(items);

 
}

 

@model Insurance.Models.AdminSignIn

<br  /><h2  style="color:dodgerblue"  class="display-2">Administrator Sign-in screen</h2>

@using (@Html.BeginForm())
{


    <div class="container">

        <div class="row" form-control><br /></div>

        <div class="row" form-control>

            <div class="col-md-6">

                <div class="form-group">

                    @Html.LabelFor(m => m.AdminId, "Administrator Id", new { @classs = "control-label", })

                    <div class="input-group">

                        <span class="input-group-addon" id="basic-addon1">$</span>

                        @Html.TextBoxFor(m => m.AdminId, new { @class = "form-control", Placeholder = "Enter Admin ID" })

                    </div>

                </div>

                <div class="form-group">

                    @Html.LabelFor(m => m.Password, "Customer Identification", new { @classs = "control-label", })

                    <div class="input-group">

                        <span class="input-group-addon" id="basic-addon1">?</span>

                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", Placeholder = "Password", type = "password" })

                    </div>

                </div>

                <div class="form-group">

                    @Html.LabelFor(m => m.Password, "Action:", new { @classs = "control-label", })

                    @Html.DropDownListFor(m => m.Action, selectList, new { @class = "form-control", })

                </div>

            </div>

            <div class="col-md-6 msg">

                @Html.ValidationSummary()

                @ViewBag.Message


            </div>
        </div>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Perform Action</button>

      
       
        }


